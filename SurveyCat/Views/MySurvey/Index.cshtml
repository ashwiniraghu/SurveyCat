@model IEnumerable<SurveyCat.Models.Survey>

@{
    if (Session["UserID"] == null)
    {
        Response.Redirect("~/Home/Login");
    }
}

@*<h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
@*<hr />*@
<div class="panel panel-default">
    <div class="panel-heading clearfix">
        <div class="btn-group pull-right">
            @using (Html.BeginForm("AddSurvey", "MySurvey", FormMethod.Get))
            {
                <input type="submit" value="Add" class="btn btn-success" />
                <input type="submit" value="Archive" class="btn btn-success"/>
            }
        </div>
    </div>
    <div class="panel panel-body">
        <table class="table table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                @*<th>
                        @Html.DisplayName("Feedback")
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.startdate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.enddate)
                </th>
                @*<th>
                        @Html.DisplayName("Participants")
                    </th>*@
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.startdate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.enddate)
                    </td>
                    <td>
                        @Html.ActionLink(" ", "Edit", new { id = item.SID }, new { @class = "glyphicon glyphicon-edit" })
                        @* @Html.ActionLink("Details", "Details", new { id = item.SID }) |*@
                        @*@Html.ActionLink("Delete", "Delete", new { id = item.SID })*@
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
